pipeline {

    agent any

    tools {
        jdk 'JDK 17'
    }

    environment {
        GITHUB_TOKEN = credentials("GITHUB_TOKEN_KB")

    }

    stages {
         
        stage("display repositories") {
            steps {

             sh "ls -alh"
            }
        }

          
        stage("build") {
            steps {

            sh "ls -alh"
            sh "cd public"
            sh "ls -alh"
            sh "cd docs"
            sh "ls -alh"

            }

        }

                 
        stage("post-build") {
            steps {
                 sh "ls -alh"

                echo 'Starting the build Stage'
            }
        }

    }

}

