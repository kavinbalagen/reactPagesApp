pipeline {

    agent any

    tools {
        jdk 'JDK 17'
    }

    environment {
        GITHUB_TOKEN = credentials("GITHUB_TOKEN_KB")

    }

    stages {
         
        stage("cloning repositories") {
            steps {

             sh "ls -alh"
            }
        }

          
        stage("build") {
            steps {

                echo 'cloning the target SDK language App'
                dir('reactPagesApp') {
                    git url: "https://github.com/kavinbalagen/reactPagesApp.git",
                        branch: "main"
                }            
            }

        }

                 
        stage("post-build") {
            steps {
                 sh "ls -alh"

                echo 'Starting the build Stage'
            }
        }

    }

}

